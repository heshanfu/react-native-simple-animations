{
    "env": {
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-native/all"
    ],
    "parser": "babel-eslint",
    "plugins": [ "jest", "react", "react-native" ],
    "rules": {
        "comma-dangle": 0,
        "indent": [ "error", 4, { "SwitchCase": 1 } ],
        "no-console": 0,
        "no-unused-vars": [ "warn" ],
        "quotes": [ "error", "single" ],
        "react-native/no-color-literals": 0,
        "react-native/no-inline-styles": 0,
        "react/jsx-indent": 0,
        "semi": [ "error", "always" ]
    }
}
